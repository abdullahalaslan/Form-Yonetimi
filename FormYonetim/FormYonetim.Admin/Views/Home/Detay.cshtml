@model FormYonetimi.Data.Model.Form
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <title>Ana Sayfa</title>
</head>
<body>
    <div class="container" style="padding-top:60px;">
        <form>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label>Form Id</label>
                    <input type="number" class="form-control" id="FormId" placeholder="Form Id" value="@Model.FormId" required >
                    <label>Form Adı</label>
                    <input type="text" class="form-control" id="FormName" placeholder="Form Adı"  value="@Model.FormName" required >
                </div>
                <div class="form-group col-md-4">
                    <label for="inputPassword4">Açıklama</label>
                    <input type="text" class="form-control" id="FormDescription" placeholder="Açıklama" value="@Model.FormDescription" required>
                </div>
              
            </div>
            <a href="/Home/List" type="button" class="btn btn-dark btn-group-sm" data-dismiss="modal">Vazgeç</a>
        </form>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>







</body>
</html>
